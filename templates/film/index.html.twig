{% extends 'base.html.twig' %}

{% block title %}film index{% endblock %}

{% block body %}
    <h2>
        film
    </h2>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Genre</th>
                            <th>Type</th>
                            <th>Modifier</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for film in films %}
                            <tr>
                                <td>{{ film.id }}</td>
                                <td>{{ film.nom }}</td>
                                <td>{{ film.genre }}</td>
                                <td>{{ film.type ? film.type|join(', ') : '' }}</td>
                                <td>
                                    <a href="{{ path('film_edit', {'id': film.id}) }}"><button type="submit" class="btn btn-primary me-2">Moifier</button></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('film_new') }}"><button type="submit" class="btn btn-primary me-2">Ajouter</button></a>
{% endblock %}
